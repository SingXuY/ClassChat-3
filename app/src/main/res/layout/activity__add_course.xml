<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/activity_add_course"
    android:background="?attr/add_edit_view_bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="?attr/add_edit_bar_view_bg"
        android:orientation="horizontal">
        <Button
            android:layout_marginLeft="3dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/back_from_addCourse_button"
            android:background="@drawable/icon_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="编辑"
            android:textColor="?attr/add_edit_all_textcolor"
            android:gravity="center"
            android:textSize="20sp"/>
        <View
            android:layout_width="30dp"
            android:layout_height="30dp"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="?attr/add_edit_bar_view_bg"
        android:layout_marginTop="20dp"
        android:layout_height="50dp">
        <TextView
            android:layout_width="60dp"
            android:text="课名"
            android:textSize="20sp"
            android:textColor="?attr/add_edit_all_textcolor"
            android:gravity="center"
            android:layout_height="match_parent"/>
        <EditText android:layout_width="0dp"
            android:id="@+id/get_course_name"
            android:layout_weight="1"
            android:hint="未填写"
            android:textColor="?attr/add_edit_all_textcolor"
            android:layout_marginLeft="3dp"
            android:background="@null"
            android:textSize="20sp"
            android:layout_height="match_parent"/>

    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
        android:background="?attr/add_edit_view_bg"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">

        <LinearLayout android:layout_width="match_parent"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:background="?attr/add_edit_bar_view_bg"
            android:layout_height="50dp">
            <TextView
                android:layout_width="60dp"
                android:text="老师"
                android:textColor="?attr/add_edit_all_textcolor"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_height="match_parent"/>
            <EditText android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/get_course_teacher"
                android:background="@null"
                android:textColor="?attr/add_edit_all_textcolor"
                android:hint="未填写"
                android:layout_marginLeft="3dp"
                android:textSize="20sp"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="?attr/add_edit_bar_view_bg"
            android:layout_marginTop="2dp"
            android:layout_height="50dp">
            <TextView
                android:layout_width="60dp"
                android:text="教室"
                android:textSize="20sp"
                android:textColor="?attr/add_edit_all_textcolor"
                android:gravity="center"
                android:layout_height="match_parent"/>
            <EditText android:layout_width="0dp"
                android:id="@+id/get_course_room"
                android:layout_weight="1"
                android:background="@null"
                android:textColor="?attr/add_edit_all_textcolor"
                android:hint="未填写"
                android:layout_marginLeft="3dp"
                android:textSize="20sp"
                android:layout_height="match_parent"/>

        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:background="?attr/add_edit_bar_view_bg"
            android:layout_height="50dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:orientation="horizontal"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="?attr/add_edit_all_textcolor"
                    android:text="星期"
                    android:textSize="20sp" />
                <EditText
                    android:layout_width="50dp"
                    android:id="@+id/get_course_day"
                    android:textColor="?attr/add_edit_all_textcolor"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:inputType="number"
                    android:digits="1234567890"
                    android:layout_height="match_parent"/>

            </LinearLayout>


            <LinearLayout android:layout_width="0dp"
                android:layout_weight="1"
                android:background="?attr/add_edit_bar_view_bg"
                android:orientation="horizontal"
                android:layout_height="match_parent">
                <EditText
                    android:layout_width="50dp"
                    android:layout_marginLeft="3dp"
                    android:textColor="?attr/add_edit_all_textcolor"
                    android:id="@+id/get_course_start"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:inputType="number"
                    android:digits="1234567890"
                    android:layout_height="match_parent"/>
                <TextView android:layout_width="wrap_content"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textColor="?attr/add_edit_all_textcolor"
                    android:text="至"
                    android:layout_height="match_parent"/>
                <EditText
                    android:layout_width="50dp"
                    android:layout_marginLeft="3dp"
                    android:id="@+id/get_course_end"
                    android:textColor="?attr/add_edit_all_textcolor"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:inputType="number"
                    android:digits="1234567890"
                    android:layout_height="match_parent"/>
                <TextView android:layout_width="wrap_content"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textColor="?attr/add_edit_all_textcolor"
                    android:text="节"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:background="?attr/add_edit_bar_view_bg"
            android:layout_height="50dp">
            <TextView android:layout_width="60dp"
                android:textSize="20sp"
                android:gravity="center"
                android:text="周数"
                android:textColor="?attr/add_edit_all_textcolor"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="?attr/add_edit_all_textcolor"
                android:id="@+id/choose_week"
                android:textSize="20sp"
                android:layout_marginLeft="3dp"
                android:text="1~25周"
                android:clickable="true"
                android:gravity="center_vertical"
                />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="?attr/add_edit_bar_view_bg"
        android:layout_marginTop="40dp"
        android:layout_height="50dp">
        <Button android:layout_width="match_parent"
            android:layout_gravity="center"
            android:textSize="24sp"
            android:textColor="?attr/add_bt_textcolor"
            android:id="@+id/add_button"
            android:text="+添加课程"
            android:background="?attr/add_edit_bar_view_bg"
            android:layout_height="match_parent"/>
    </LinearLayout>


</LinearLayout>